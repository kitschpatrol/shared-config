{
	"[astro]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[gitignore]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[ruby]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[shellscript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[svelte]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"prettier.documentSelectors": [
		"**/.eslintignore",
		"**/.node-version",
		"**/.npmrc",
		"**/.prettierignore",
		"**/*.astro",
		"**/*.rb",
		"**/*.svelte"
	],

	"prettier.enable": true
}
