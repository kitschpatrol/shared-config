{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ES2023",
		"jsx": "react",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"useDefineForClassFields": true,

		/* Modules */
		"module": "ESNext",

		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,

		/* JavaScript Support */
		"allowJs": true,
		"checkJs": true,

		/* Type Checking */
		"strict": true,
		"allowUnreachableCode": true, // Use eslint's 'no-unreachable' rule instead.
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmit": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"noErrorTruncation": true
	},
	/* Also lint config files. */
	"include": ["**/*", "**/**.*"],
	"exclude": [
		"**/dist/",
		"**/bin/",
		"test/fixtures/input/*.*",
		"test/fixtures/output-fixable/*.*",
		/* TODO re-enable */
		"test/fixtures/output-fixed/*.*"
	]
}
